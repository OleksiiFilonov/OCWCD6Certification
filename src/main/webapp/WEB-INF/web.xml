	</servlet-mapping>
	<servlet>
		<servlet-name>displayELBracketsAttributesJSP</servlet-name>
		<jsp-file>/chapter8/displayELBracketsAttributes.jsp</jsp-file>
		<init-param>
			<param-name>jspConfigInitParameter</param-name>

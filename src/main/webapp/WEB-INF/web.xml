	<!-- Chapter 11 -->
	
	<servlet>
	   <servlet-name>ExactMapping</servlet-name>
	   <servlet-class>com.example.chapter11.ExactMappingServlet</servlet-class>
	   <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
